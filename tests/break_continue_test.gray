let i = 0;
let b = 0;

while i < 5 {
    i += 1;
    if i == 2 {
        continue;
    }
    b += 1;
}

assert_eq(b, 4);

let i = 0;

while i < 5 {
    if i == 2 {
        break;
    }

    i += 1;
}

assert_eq(i, 2);

let array = [0, 1, 2];

let sum = 0;

for v in array {
    if v == 1 {
        continue;
    }
    sum += 1;
}

assert_eq(sum, 2);

let sum = 0;

for v in array {
    if v == 1 {
        break;
    }
    sum += 1;
}

assert_eq(sum, 1);