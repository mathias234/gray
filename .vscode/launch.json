    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'gray_cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gray_cli",
                    "--package=gray_cli"
                ],
                "filter": {
                    "name": "gray_cli",
                    "kind": "bin"
                }
            },
            "args": ["temp.gray"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'gray_cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=gray_cli",
                    "--package=gray_cli"
                ],
                "filter": {
                    "name": "gray_cli",
                    "kind": "bin"
                }
            },
            "args": ["temp.gray"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'lib'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=lib",
                    "--package=gray_cli"
                ],
                "filter": {
                    "name": "lib",
                    "kind": "test"
                }
            },
            "args": ["temp.gray"],
            "cwd": "${workspaceFolder}"
        }
    ]
}